{
	"compilerOptions": {
		"jsx": "react",
		"declaration": true,
		"declarationDir": "./dist",
		"module": "es6",
		"noImplicitAny": true,
		"outDir": "./dist",
		"target": "es2015",
		"skipLibCheck": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/index.ts"
	],
	"exclude": [
		"node_modules"
	]
}
